{
  "configurations": [
    {
      "type": "command",
      "name": "Build C# Subtracter",
      "program": "dotnet",
      "workingDir": "csharp/",
      "environment": {
        "ASPNETCORE_URLS": "http://localhost:7001"
      },
      "args": [
        "build"
      ]
    },
    {
      "type": "command",
      "name": "Subtracter (C#)",
      "program": "dapr",
      "workingDir": "csharp/",
      "environment": {
        "ASPNETCORE_URLS": "http://localhost:7001"
      },
      "args": ["run", "--app-id", "subtractapp", "--app-port", "7001", "--dapr-http-port", "3504", "dotnet", "./bin/Debug/netcoreapp3.1/Subtract.dll"],
    },
    {
      "type": "command",
      "name": "Adder (Go)",
      "program": "dapr",
      "workingDir": "go/",
      "args": ["run", "--app-id", "addapp", "--app-port", "6000", "--dapr-http-port", "3503", "go", "run", "app.go"],
    },
      {
          "type": "command",
          "name": "Print Env",
          "program": "printenv",
          "args": [],
      },
      {
          "type": "command",
          "name": "Adder (Java)",
          "program": "dapr",
          "workingDir": "java/",
          "args": ["run", "--app-id", "addapp", "--app-port", "6000", "--dapr-http-port", "3503", "./gradlew", "run"],
      },
      {
      "type": "command",
      "name": "Divider (Node JS)",
      "program": "dapr",
      "workingDir": "node/",
      "args": ["run", "--app-id", "divideapp", "--app-port", "4000", "--dapr-http-port", "3502", "node", "app.js"],
    },
      {
          "type": "command",
          "name": "Divider (Kotlin)",
          "program": "dapr",
          "workingDir": "kotlin/",
          "args": ["run", "--app-id", "divideapp", "--app-port", "4000", "--dapr-http-port", "3502", "./gradlew", "run"],
      },
      {
      "type": "command",
      "name": "Multiplier (Python)",
      "program": "dapr",
      "workingDir": "./python/",
      "environment": {
        "FLASK_RUN_PORT": "5001"
