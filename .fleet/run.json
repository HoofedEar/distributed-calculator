{
  "configurations": [
    {
      "type": "command",
      "name": "Build C# Calculator",
      "program": "dotnet",
      "workingDir": "csharp/",
      "environment": {
        "ASPNETCORE_URLS": "http://localhost:7001"
      },
      "args": [
        "build"
      ]
    },
    {
      "type": "command",
      "name": "C# Calculator",
      "program": "dapr",
      "workingDir": "csharp/",
      "environment": {
        "ASPNETCORE_URLS": "http://localhost:7001"
      },
      "args": ["run", "--app-id", "csharp-calc", "--app-port", "7001", "--dapr-http-port", "3505", "dotnet", "run"],
    },
      {
          "type": "command",
          "name": "PHP Calculator",
          "program": "dapr",
          "workingDir": "php/",
          "args": ["run", "--app-id", "php-calc", "--app-port", "7002", "--dapr-http-port", "3504", "--", "php", "-S", "0.0.0.0:7002", "-t", "public"],
      },
    {
      "type": "command",
      "name": "Go Calculator",
